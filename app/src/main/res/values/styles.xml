<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/gray</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="buttonStyle">@style/BeatBoxButtonStrong</item>
        <item name="imageButtonStyle">@style/SeekBarLayout</item>
    </style>

    <style name="BeatBoxButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_music_player</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BeatBoxButtonStrong" parent="BeatBoxButton">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeekBarLayout" parent="Widget.Support.CoordinatorLayout">
        <item name="android:background">@drawable/seekbar_layout</item>
    </style>

    <style name="SeekBarImage">
        <item name="android:background">@drawable/button_music_player</item>
    </style>
</resources>